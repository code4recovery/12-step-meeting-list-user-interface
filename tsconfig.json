{
  "compilerOptions": {
    "lib": ["ES2021.String", "DOM"],
    "target": "ES2015",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "jsx": "preserve",
    "outDir": "public"
  },
  "include": ["index.d.ts", "src/app.tsx", "src/**/*.ts"]
}
